        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="style_title_layout">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
