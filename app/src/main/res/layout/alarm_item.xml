<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_item_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/time_item"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:textSize="27sp"
            android:gravity="center"
            tools:text="19:30"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/weight_item"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:gravity="center"
            tools:text="100"
            app:layout_constraintRight_toLeftOf="@id/text_weight_unit"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/text_weight_unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/unit_weight"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="3dp"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/weight_item"/>

        <ImageView
            android:id="@+id/image_alarm_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/alarm_on"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
        <ImageView
            android:id="@+id/image_alarm_switch"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@mipmap/alarm_switch"
            app:layout_constraintRight_toRightOf="@id/image_alarm_back"
            app:layout_constraintTop_toTopOf="@id/image_alarm_back"
            app:layout_constraintBottom_toBottomOf="@id/image_alarm_back"/>
        <!--<Button
            android:id="@+id/state_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:text="开"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button_delete_alarm"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:textColor="#ffffff"
        android:background="@color/black"
        android:gravity="center"
        android:text="删除"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/ll_main"
        app:layout_constraintTop_toTopOf="@id/ll_main"
        app:layout_constraintBottom_toBottomOf="@id/ll_main">

    </Button>



</androidx.constraintlayout.widget.ConstraintLayout>


