<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/myTheme"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:background="@drawable/background0"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="我的设备 -- "
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text0"
            android:layout_alignBottom="@+id/text0"
            android:layout_toEndOf="@id/text0"
            android:text="未连接"
            android:textSize="25sp" />
        <!--
            <EditText
                android:id="@+id/edit_text0"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="IP"
                />

            <EditText
                android:id="@+id/edit_text1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Port"
                app:layout_constraintTop_toBottomOf="@id/edit_text0"
                app:layout_constraintLeft_toLeftOf="@id/edit_text0"/>
        -->

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="连接设备"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余粮：450克"
        android:textSize="35sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout" />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余粮充足！大约还可维持10天！"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text2" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_list_title"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3" />

    <com.example.feedyourpet.SlideRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/text4"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="同步"
        android:textSize="18sp"
        android:background="@drawable/background1"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button2"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="+"
        android:textSize="30sp"
        android:background="@drawable/background1"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintLeft_toRightOf="@id/button1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/button1"/>


</androidx.constraintlayout.widget.ConstraintLayout>